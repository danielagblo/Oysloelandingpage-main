# Environment variables for production deployment
# Copy this file to .env and update the values

# Django settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database (DigitalOcean Managed Database)
DATABASE_URL=postgresql://username:password@your-db-host:25060/dbname?sslmode=require

# Redis (DigitalOcean Managed Redis)
REDIS_URL=redis://username:password@your-redis-host:25061/0

# Email settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Static files
STATIC_ROOT=/home/django/testsite/staticfiles
MEDIA_ROOT=/home/django/testsite/media

# Logging
LOG_LEVEL=INFO
